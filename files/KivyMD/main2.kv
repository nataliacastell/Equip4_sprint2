MDScreen:
    MDTopAppBar:
        title: "PymeShield"
        elevation: 4
        pos_hint: {"top": 1}
        md_bg_color: "#ff6720"
        specific_text_color: "black"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    
#menu desplegable
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "Inicio"
                MDLabel:
                    text:"Bienvenido a Pymeshield, haz click en el menú para navegar entre secciones"
                    halign: "center"
                    font_style: "H3"

            MDScreen:
                name: "Kanban"
                Image:
                    source: 'img/kanban.png'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size: "48dp", "48dp"

            MDScreen:
                name: "Gantt"
                Image:
                    source: 'img/gantt.png'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size: "48dp", "48dp"
            MDScreen:
                name: "Tareas"
                Image:
                    source: 'img/tareas.png'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size: "48dp", "48dp"
                    
            MDScreen:
                name: "Contacto"
                MDLabel:
                    text:"Si tienes cualquier duda envía un email a: support@pymeralia.com"
                    halign: "center"
                    font_style: "H3"

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical' 
                ContentNavigationDrawer:
                    manager: screen_manager
                    nav_drawer: nav_drawer
                    
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Pymeshield"
            title_font_style: "H5"
            text: "Menú"
            source: "img/logo.png"
            spacing: "16dp"
            padding: "12dp", 0, 0, "56dp"
        DrawerClickableItem:
            text: "Inicio"
            icon: "home"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inicio"     

        DrawerClickableItem:
            text: "Kanban"
            icon: "chart-box"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Kanban"  

        DrawerClickableItem:
            text: "Gantt"
            icon: "chart-gantt"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Gantt"  
        
        DrawerClickableItem:
            text: "Listar tareas"
            icon: "format-list-bulleted"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Tareas"  

        DrawerClickableItem:
            icon: "email"
            text: "Contacto"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Contacto"  

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#efb58c"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#ff6720"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
